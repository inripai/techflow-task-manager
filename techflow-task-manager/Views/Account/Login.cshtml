@{
    ViewData["Title"] = "Login";
}

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
        <h2 class="mb-4 text-center">Acessar</h2>
        <form asp-action="Login" method="post">
            @Html.AntiForgeryToken()
            <div class="mb-3">
                <label class="form-label" for="username">Usuário</label>
                <input class="form-control" id="username" name="username" type="text" placeholder="Digite seu usuário" required />
            </div>
            <div class="mb-3">
                <label class="form-label" for="password">Senha</label>
                <input class="form-control" id="password" name="password" type="password" placeholder="Digite sua senha" required />
            </div>
            <div class="d-grid gap-2">
                <button class="btn btn-primary" type="submit">Entrar</button>
            </div>
        </form>
    </div>
</div>
