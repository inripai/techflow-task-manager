@model IEnumerable<techflow_task_manager.Models.TaskItem>
@{
    ViewData["Title"] = "Gestão de Tarefas";
    var username = ViewData["Username"] as string;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="mb-0">Gestão de Tarefas</h1>
        @if (!string.IsNullOrWhiteSpace(username))
        {
            <p class="text-muted mb-0">Bem-vindo, @username!</p>
        }
    </div>
    <div class="d-flex gap-2">
        <a class="btn btn-success" asp-action="Create">Nova Tarefa</a>
        <form asp-controller="Account" asp-action="Logout" method="post" class="mb-0">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-outline-secondary">Sair</button>
        </form>
    </div>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info" role="alert">
        Nenhuma tarefa cadastrada. Clique em "Nova Tarefa" para começar.
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped align-middle">
            <thead class="table-light">
                <tr>
                    <th>Título</th>
                    <th>Descrição</th>
                    <th class="text-center">Status</th>
                    <th class="text-end">Ações</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var task in Model)
            {
                <tr>
                    <td>@task.Title</td>
                    <td>@task.Description</td>
                    <td class="text-center">
                        @if (task.IsCompleted)
                        {
                            <span class="badge bg-success">Concluída</span>
                        }
                        else
                        {
                            <span class="badge bg-warning text-dark">Pendente</span>
                        }
                    </td>
                    <td class="text-end">
                        <a class="btn btn-sm btn-primary me-2" asp-action="Edit" asp-route-id="@task.Id">Editar</a>
                        <form asp-action="Delete" asp-route-id="@task.Id" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Deseja realmente excluir esta tarefa?');">Excluir</button>
                        </form>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
}
